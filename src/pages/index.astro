// import Newsletter from "components/Newsletter.astro"
// Images
import GosimDelft from "images/homepage/gosim-delft.png"
import GosimParis2 from "images/homepage/sl-paris2.png"
---

<Layout
  title="GOSIM Spotlight Hangzhou 2025"
  description="GOSIM Spotlight Hangzhou, where exceptional projects are showcased to the world."
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="Home"
>
  <Hero
    date="September 13-14, 2025"
    location="Hangzhou, China"
    links={[
      {
        text: "Nominate Project",
        link: "https://cfp.gosim.org/",
        openInNewTab: true,
      },
      {
        text: "Learn More",
        link: "#program-overview",
        openInNewTab: false,
      },
    ]}
  />
  <div
    class="section-wrap"
    id="program"
    data-theme-section="light"
    data-bg-section="lightgray"
  >
    <Intro>
      <h1 class="h3 light split-words animate-read">
        Are you building something revolutionary?
        <p>ðŸ’¡</p>
        <b>GOSIM AI for Humanity Spotlight</b>
        is your launchpad to the world! What if AI wasn't just built to serve, but
        to co-create with us?
        <br />
        <p>âœ¨</p>
      </h1>
      <h1 class="h5 light split-words animate-read">
        AI for Humanity Spotlight is an international showcase for projects that
        explore how generative AI can foster empathy, shared creativity, and
        ethical coexistence.
        <div style="margin: 1rem 0;"></div>
        This spotlight will take place as part of GOSIM Hangzhou, China's leading
        open-source conference, from September 13â€“14, 2025, in Hangzhou, China.
      </h1>
      <br />
      <h1 class="h3 light split-words animate-read">
        This yearâ€™s edition features two distinct tracks:
      </h1>
      <div
        style="display: flex; gap: 2rem; align-items: flex-start; margin-top: 1.5rem;"
      >
        <div
          style="flex: 1; outline: 1px solid var(--color-border); padding: 1rem;"
        >
          <ul style="margin-bottom: 1rem;" class="h5 light">
            <li>
              <span style="font-weight: bold;">Applied AI</span> â€“ showcasing practical
              products and solutions powered by generative AI
            </li>
          </ul>
          <Button
            text="Submit Applied AI Project"
            link="https://cfp.gosim.org"
            openInNewTab={true}
            class="btn primary xl btn-hover fade-in-last"
          />
        </div>

        <div
          style="flex: 1; outline: 1px solid var(--color-border); padding: 1rem;"
        >
          <ul style="margin-bottom: 1rem;" class="h5 light">
            <li>
              <span style="font-weight: bold;">Interactive Demos</span> â€“ with applications
              in education, mental health, elder care, and social services
            </li>
          </ul>
          <Button
            text="Submit Interactive Demo Project"
            link="https://cfp.gosim.org"
            openInNewTab={true}
            class="btn primary xl btn-hover fade-in-last"
          />
        </div>
      </div>
    </Intro>
  </div>
  <ProgramOverview />
  <div
    class="section-wrap"
    id="how"
    data-theme-section="light"
    data-bg-section="lightgray"
  >
    <Tracks
      title="Participating in GOSIM Spotlight is a simple 3 step process"
      description="The Spotlight aims to highlight a curated selection of impactful and forward-thinking projects that exemplify humanâ€“AI co-creation. Submissions will be evaluated by an independent jury composed of leading experts from academia, industry, and the creative sector."
      list={[
        {
          title: "Apply or Nominate",
          text: `Tell us about your innovative work and why it deserves to be seen by the world. Anyone can also nominate others' projects.`,
        },
        {
          title: "Evaluation",
          text: `Our panel of experts reviews the submissions, focusing on innovation, utility, and community impact.`,
        },
        {
          title: "Selection",
          text: `Selected projects/papers/models will be showcased at the GOSIM Hangzhou Conference. They will also be featured on our website, newsletter, and social media channels, ensuring they reach a global audience.`,
        },
      ]}
      ctaButton={{
        text: "Apply or Nominate Now",
        link: "https://cfp.gosim.org/",
      }}
    />
  </div>

