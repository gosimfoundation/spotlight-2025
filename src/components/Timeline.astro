---
export interface Props {
  events: Array<{
    date: string;
    title: string;
  }>;
}

const { events = [
  {
    date: "26 April",
    title: "Submit your entries"
  },
  {
    date: "26 April - 4 May",
    title: "Judging"
  },
  {
    date: "10 May",
    title: "Nominations announced"
  },
  {
    date: "29 May",
    title: "Winners announced on stage"
  }
] } = Astro.props;
---

<section
  class="section section-timeline"
  id="timeline"
  data-theme-section="light"
  data-bg-section="light"
  data-scroll-section
>
  <div class="container">
    <h2 class="timeline-title">Timeline</h2>
    <div class="row">
      <div class="timeline-section">
        <div class="timeline-container">
          {events.map((event, index) => (
            <div class={`timeline-item ${index % 2 === 0 ? 'top' : 'bottom'}`}>
              <div class="timeline-dot"></div>
              <div class="timeline-date">
                <h4>{event.date}</h4>
                <p>{event.title}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
<style lang="scss">
  // .section-timeline {
  //   padding-top: 0px !important;
  // }
  .timeline-title {
    padding-bottom: 60px;
  }
  .timeline-section {
    width: 100%;
    padding: var(--section-padding) 0;
  }

  .timeline-container {
    position: relative;
    margin: 0 auto;
    padding: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;

    &::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 12px;
      right: 12px;
      height: 5px;
      background: #076597;
      border-radius: 3px;
      transform: translateY(-50%);
    }
  }

  .timeline-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 0;
    position: relative;
    max-width: 25%;

    &:first-child {
      .timeline-dot {
        margin-left: 0;
      }
      .timeline-date {
        left: 0;
      }
      &.top .timeline-date,
      &.bottom .timeline-date {
        left: 0;
      }
    }

    &:last-child {
      padding-right: 0;
    }

    &.top .timeline-date {
      bottom: calc(100% + 2rem);
      top: auto;
      text-align: left;
      left: -12px;
    }

    &.bottom .timeline-date {
      top: calc(100% + 2rem);
      bottom: auto;
      text-align: left;
      left: -12px;
    }
  }

  .timeline-dot {
    width: 24px;
    height: 24px;
    background: #076597;
    border-radius: 50%;
    position: relative;
    z-index: 2;
    margin-left: -12px;
  }

  .timeline-date {
    position: absolute;
    min-width: 200px;

    h4 {
      padding-bottom: 12px;
    }
  }

  @media screen and (max-width: 768px) {
    .timeline-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 4rem;
      padding-left: 12px;

      &::before {
        left: 12px;
        width: 2px;
        height: 100%;
        top: 0;
        transform: none;
      }
    }
    .timeline-title {
      padding-bottom: 0px;
    }
    .timeline-item {
      padding-left: 0;
      padding-right: 0;
      max-width: 100%;
      width: 100%;
      align-items: flex-start;

      &.top .timeline-date,
      &.bottom .timeline-date {
        position: relative;
        top: 0;
        bottom: 0;
        text-align: left;
        left: 0;
        padding-left: 36px;
      }

      &:first-child {
        .timeline-date {
          left: 0;
        }
      }
    }

    .timeline-dot {
      position: absolute;
      left: -11px;
      margin-left: 0;
    }

    .timeline-date {
      margin: 0;
      text-align: left;
      min-width: 0;
      width: 100%;
    }
  }
</style>
